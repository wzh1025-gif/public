<script>
  // 简单的中英切换（纯前端，无依赖）
  const dict = {
    zh: {
      chip: "学无止境 · 成长不息 · 活出精彩",
      title: "你的品牌一句话主张",
      subtitle: "在这里放一个副标题，解释你提供什么：学习资源 / 工具 / 社区。",
      coming1_title: "即将上线：模块 A",
      coming1_desc: "一句话说明这个模块做什么，服务谁。",
      coming2_title: "即将上线：模块 B",
      coming2_desc: "一句话说明这个模块做什么，服务谁。",
      more_title: "更多信息",
      more_desc: "获取最新的学习技巧和工具！你也可以把这里替换成订阅入口或问卷链接。",
      about: "学习与资源分享平台。",
      quick: "快速链接",
      home: "首页",
      contact: "联系我们",
      explore: "探索",
      contact_title: "联系方式"
    },
    en: {
      chip: "Keep learning · Keep growing · Live brilliantly",
      title: "Your one‑line brand promise",
      subtitle: "A short subtitle describing what you offer: resources / tools / community.",
      coming1_title: "Coming soon: Module A",
      coming1_desc: "One sentence about what it does and for whom.",
      coming2_title: "Coming soon: Module B",
      coming2_desc: "One sentence about what it does and for whom.",
      more_title: "More info",
      more_desc: "Get the latest tips & tools! Replace with a subscribe box or survey link.",
      about: "A platform for learning and resources.",
      quick: "Quick links",
      home: "Home",
      contact: "Contact us",
      explore: "Explore",
      contact_title: "Contact"
    }
  };
  const $ = (sel)=>document.querySelectorAll(sel);
  function applyLang(lang){
    document.querySelectorAll('[data-i18n]').forEach(el=>{
      const key = el.getAttribute('data-i18n');
      if(dict[lang] && dict[lang][key]) el.textContent = dict[lang][key];
    });
    document.getElementById('lang-zh').classList.toggle('active',lang==='zh');
    document.getElementById('lang-en').classList.toggle('active',lang==='en');
    localStorage.setItem('lang', lang);
  }
  document.getElementById('lang-zh').addEventListener('click',e=>{e.preventDefault();applyLang('zh')});
  document.getElementById('lang-en').addEventListener('click',e=>{e.preventDefault();applyLang('en')});
  applyLang(localStorage.getItem('lang')||'zh');
  document.getElementById('year').textContent = new Date().getFullYear();
</script>
